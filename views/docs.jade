extends layout

block content
  .span3
    ul.nav.nav-tabs.nav-stacked
      li
        a(href='/my/docs') Мои документы
      li
        a(href='/doc-edit') Добавить документ
  .span9
    h3 Новые документы
    ul
    each doc in docs
      li
        a(href='/doc/#{doc._id}')= doc.name
        |&nbsp;(
        a(href='/user/#{doc.author}')= doc.author
        |&nbsp;
        |#{dateFormat(doc.created_at)}
        |)
    
