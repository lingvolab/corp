extends layout

block content
	form(method='post', enctype='multipart/form-data', acton='/doc-add')
		legend Добавление нового респондента
		label Имя
		input.span12(name='name', type='text', value=form.name)
		
		label Биография
		textarea.span12(name='biography', rows=17)= form.biography
		-if (form.error)
			-if (typeof form.error != 'array') form.error = [ form.error ]
			each err in form.error
				.alert.alert-error
					|#{err}
		label Фотография
		input(type='file', name='photo')
		
		button.btn(type='submit') Submit